<a {% if promotion_link != null -%}href="{{ promotion_link }}"{%- else -%}disabled{%- endif %} class="mega-menu-promotion">
		{%- render 'responsive-image', image: promotion_image, sizes: '670x0', priority: 'low' -%}
	<div class="mega-menu-promotion--cover">
		{%- if promotion_heading -%}<p class="heading-font">{{ promotion_heading }}</p>{%- endif -%}
		{%- if promotion_link_label != null -%}<span class="text-button white">{{ promotion_link_label }}</span>{%- endif -%}
	</div>
</a>
